body {
    background: #0b0f14;
    color: #d0d6dc;
    font-family: monospace;
}

h1 {
    text-align: center;
}

.grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
}

table {
    width: 100%;
    border-collapse: collapse;
    font-size: 12px;
}

th, td {
    border: 1px solid #333;
    padding: 4px;
}

th {
    background: #111;
}

tr:nth-child(even) {
    background: #151a21;
}
